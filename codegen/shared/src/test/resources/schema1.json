{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Coordinate",
  "description": "A geographical coordinate.",
  "required": [
    "latitude",
    "longitude"
  ],
  "type": "object",
  "properties": {
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90,
      "format": "double"
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180,
      "format": "double"
    }
  }
}